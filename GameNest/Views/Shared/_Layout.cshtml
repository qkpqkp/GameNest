<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Use Layout@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-inverse sticky-top navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-collapse collapse justify-content-between">
                    <div class="d-flex flex-row">
                        <button class="btn" onclick="ToggleMenu()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="white" class="bi bi-list" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                        </button>
                        <div style="width:10px"></div>
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand align-self-start">GameNest</a>
                    </div>
                    <partial name="_loginPartial" class="align-self-end">
                
            </div>
        </div>
    </nav>
     <div class="d-flex flex-row" style="height:100%;display:none">
         <nav id="menu" class="d-flex flex-column flex-shrink-0 p-3 bg-light position-fixed" style="height:100%;width:15%; min-width:fit-content;">
            <ul class="nav nav-pills flex-column mb-auto menu-item">
                <li style="height:40px">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand menu-item" style="color:rgba(98,95,99,1)">Home</a>
                </li>
                <li style="height:40px">
                    <a class="navbar-brand menu-item" style="color:rgba(98,95,99,1)">Game</a>
                </li>
            </ul>
        </nav>
        <div id="menu-p" class="d-flex flex-column" style="height:100%;width:20%">

        </div>
      
        <div class="container d-flex flex-column">
            @RenderBody()
        </div>
  
    </div>
   

    @RenderSection("Scripts",required:false);
</body>

<script>
    function ToggleMenu(){
        var menuItems = document.getElementsByClassName("menu-item");
        var menu = document.getElementById("menu");
        if(menu.style.display === "none"){
            menu.style.display = "block";
            menu.style.height = "100%";
            menu.style.width = "15%";
            menu.classList.add("p-3");
            document.getElementById("menu-p").style.width = "20%";
            for(var item of menuItems){
                item.style.display = "block";
            }
        }else{
            for(var item of menuItems){
                item.style.display = "none";
            }
            menu.style.height = "0px";
            menu.style.width = "0px";
            menu.classList.remove("p-3");
            document.getElementById("menu-p").style.width = "0%"
            menu.style.display = "none";
        }
    }
</script>
</html>
